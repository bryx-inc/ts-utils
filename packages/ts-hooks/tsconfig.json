{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES5",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noEmit": false,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist/",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strict": true,
    "downlevelIteration": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/", "src/**/*.test.ts"]
}
